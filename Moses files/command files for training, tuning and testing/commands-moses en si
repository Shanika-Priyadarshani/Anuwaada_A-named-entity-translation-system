Training

cd ~/lm
 ~/mosesdecoder/bin/lmplz -o 3 <~/corpus/data.en-si.clean.si > data.en-si.arpa.si       


~/mosesdecoder/bin/build_binary \
   data.en-si.arpa.si \
   data.en-si.blm.si


cd ~/working
 nohup nice ~/mosesdecoder/scripts/training/train-model.perl -root-dir train \
 -corpus ~/corpus/data.en-si.clean                             \
 -f en -e si -alignment grow-diag-final-and -reordering msd-bidirectional-fe \
 -lm 0:3:$HOME/lm/data.en-si.blm.si:8                          \
 -external-bin-dir ~/mosesdecoder/tools >& training.out &



Tuning

 cd ~/working
 nohup nice ~/mosesdecoder/scripts/training/mert-moses.pl \
  ~/corpus/data-test.true.en ~/corpus/data-test.true.si \
  ~/mosesdecoder/bin/moses train/model/moses.ini --mertdir ~/mosesdecoder/bin/ \
  &> mert.out &




Testing

cd ~/working
~/mosesdecoder/scripts/training/filter-model-given-input.pl \
filtered-testdata mert-work/moses.ini ~/corpus/testdata.true.en \
-Binarizer ~/mosesdecoder/bin/processPhraseTableMin


nohup nice ~/mosesdecoder/bin/moses \
-f ~/working/filtered-testdata/moses.ini \
 < ~/corpus/testdata.true.en \
 > ~/working/testdata.translated.si \
 2> ~/working/testdata.out 
 ~/mosesdecoder/scripts/generic/multi-bleu.perl \
 -lc ~/corpus/testdata.true.si \
 < ~/working/testdata.translated.si





Run Command 
~/mosesdecoder/bin/moses -f ~/working/mert-work/moses.ini
